<div class="container pt90 clearfix mb90">
    <div class="title-heading1 mb60">
        <h3 id="trainings">Nasi trenerzy</h3>
    </div>
    <div class="clearfix">
        
        <div id="js-grid-lightbox-gallery" class="cbp">
            <% for(var i = 0; i < trainers.length; i++){
                    const trainer = trainers[i]; 
                    let infoText = '';
                    if(trainer.isTrainer && trainer.isFeedCounsultant){
                        infoText = 'Trener personalny, dietetyk';
                    }else if(trainer.isTrainer){
                        infoText = 'Trener personalny';
                    }else if(trainer.isFeedCounsultant){
                        infoText = 'Dietetyk';
                    }

                    const cityName = 
                    [
                        'Warszawa',
                        'Kraków',
                        'Łódź',
                        'Wrocław',
                        'Poznań',
                        'Gdańsk',
                        'Szczecin',
                    ][trainer.city];
                    if(cityName){
                        infoText += ', ' + cityName;
                    }
                    %>
                <div class="cbp-item web-design graphic print motion">
                    <a href="/<%- trainer.friendlyId %>" class="cbp-caption">
                        <div class="cbp-caption-defaultWrap">
                            <img src="<%- trainer.user.profilePic || '/images/no_image_user.png' %>" alt="">
                        </div>
                        <div class="cbp-caption-activeWrap">
                            <div class="cbp-l-caption-alignLeft">
                                <div class="cbp-l-caption-body">
                                    <div class="cbp-l-caption-title"><%- trainer.user.name %></div>
                                    <div class="cbp-l-caption-desc"><%- infoText %></div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
    <div>
    	<button class="btn btn-outline-warning mb5 pull-right">Zobacz więcej</button>
    </div>
</div>

